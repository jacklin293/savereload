{
    "name":               "Puppeteer",
    "description":        "Auto reload after saving file.",
    "permissions":        [],
    "version": "1.0",
    "manifest_version": 2,
    "background" : {
        "scripts" : ["js/background.js"]
    },
    "browser_action" : {
        "default_icon" : {
            "16" : "16.png",
            "19":               "19.png",
            "32" : "32.png",
            "38":               "38.png",
            "48" : "48.png",
            "128":              "128.png"
        },
        "default_title" : "Development Tool",
        "default_popup" : "popup.html"
    },
    "content_scripts": [
        {
          "matches": [ "http://*/*", "https://*/*"],
          "css": ["content.css"],
          "js": ["js/content.js"]
        }
      ]
}
