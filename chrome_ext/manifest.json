{
    "name":                 "Puppeteer",
    "version":              "1.0",
    "description":          "Auto reload after saving file.",
    "permissions":        ["tabs", "*://*/*"],
    "manifest_version": 2,
    "background" : {
        "scripts" : ["js/background.js"]
    },
    "browser_action" : {
        "default_title" : "Development Tool",
        "default_icon" : {
            "16" :      "img/16.png",
            "19":       "img/browser_action_icon_disabled_19.png",
            "32" :      "img/32.png",
            "38":       "img/38.png",
            "48" :      "img/48.png",
            "128":      "img/128.png"
        },
        "default_popup" : "popup.html"
    },
    "content_scripts": [
        {
          "matches": [ "http://*/*", "https://*/*"],
          "css": ["content.css"],
          "js": ["js/content.js"]
        }
      ]
}
